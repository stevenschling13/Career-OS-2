# Server Configuration
PORT=8787
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Google OAuth Configuration
# Get these from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8787/auth/google/callback

# Security
# Generate a random 32-byte key (base64 encoded) for token encryption
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=your_base64_encryption_key_here

# Generate a random string for cookie signing
COOKIE_SECRET=super_secret_cookie_signing_key_at_least_32_bytes_long

# Database
DATABASE_URL="file:./dev.db"